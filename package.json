{
  "name": "awsp",
  "version": "2.0.0",
  "description": "A script to switch between your AWS profiles",
  "exports": "./dist/main.js",
  "bin": {
    "awsp": "dist/main.js"
  },
  "scripts": {
    "start": "node dist/main.js",
    "dev": "cross-env DEBUG=true npm start",
    "build": "npx tsc",
    "watch": "npm run build -- --watch",
    "copy:env": "cp -n .env.example .env || exit 0",
    "postinstall": "npm run copy:env && npm run build"
  },
  "author": "Alex",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexNaga/awsp.git"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "dirname-filename-esm": "^1.1.1",
    "dotenv": "^16.0.3",
    "fs-extra": "^11.1.0",
    "fuzzy-search": "^3.2.1",
    "ini": "^3.0.1",
    "nanospinner": "^1.1.0",
    "playwright": "^1.29.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/fuzzy-search": "^2.1.2",
    "@types/ini": "^1.3.31",
    "@types/node": "^18.11.18",
    "@types/prompts": "^2.4.2",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/*.{ts,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14.16"
  },
  "type": "module"
}
