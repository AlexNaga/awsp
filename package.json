{
  "name": "awsp",
  "version": "2.0.0",
  "description": "A script to switch between your AWS profiles",
  "exports": "./dist/main.js",
  "bin": {
    "awsp": "dist/main.js"
  },
  "scripts": {
    "start": "node dist/main.js",
    "dev": "cross-env DEBUG=true npm start",
    "test": "npx playwright test --ui",
    "build": "npx tsc",
    "lint:fix": "npx eslint . --fix",
    "watch": "npm run build -- --watch",
    "copy:env": "cp -n .env.example .env || exit 0",
    "postinstall": "npm run copy:env && npx playwright install chromium && npm run build"
  },
  "author": "Alex",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlexNaga/awsp.git"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "dirname-filename-esm": "^1.1.1",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "fuzzy-search": "^3.2.1",
    "ini": "^4.1.1",
    "nanospinner": "^1.1.0",
    "playwright": "^1.41.1",
    "prompts": "^2.4.2",
    "totp-generator": "^0.0.14"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.2",
    "@types/fuzzy-search": "^2.1.2",
    "@types/ini": "^1.3.31",
    "@types/node": "^20.6.3",
    "@types/prompts": "^2.4.4",
    "@types/totp-generator": "^0.0.6",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "src/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "src/*.{ts,css,md}": "prettier --write"
  },
  "engines": {
    "node": ">=14.16"
  },
  "type": "module"
}
